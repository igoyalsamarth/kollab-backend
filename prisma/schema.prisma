// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AccountType {
  PROFESSIONAL
  BUSINESS
}

model User {
  id                 String               @id @default(cuid())
  emailId            String?              @unique
  instaAccount       String               @unique
  accountName        String?
  imgSource          String?
  claimed            Boolean              @default(false)
  accountType        AccountType          @default(BUSINESS)
  posts              Int?
  followers          Int?
  following          Int?
  category           String?
  description        String?
  link               Json?
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  staticPostsDetails StaticPostsDetails[]
  reelPostsDetails   ReelPostsDetails[]
}

model StaticPostsDetails {
  id           String    @id
  user         User?     @relation(fields: [instaAccount], references: [instaAccount])
  instaAccount String // This will be used to connect with the User table
  imgSource    String?
  likes        Int?
  postedAt     DateTime?
  brands       Json?
  locations    Json?
  audio        Json?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model ReelPostsDetails {
  id           String    @id
  user         User?     @relation(fields: [instaAccount], references: [instaAccount])
  instaAccount String // This will be used to connect with the User table 
  imgSource    String?
  likes        Int?
  comments     Int?
  views        Int?
  postedAt     DateTime?
  brands       Json?
  locations    Json?
  audio        Json?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}
